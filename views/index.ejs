<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Bookstore</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <header>
    <h1>Bookstore</h1>
    <nav>
      <a href="/add-book">Add a Book</a>
    </nav>
  </header>

  <main>
    <h2>Books List</h2>
    <table>
      <thead>
        <tr>
          <th>ID</th>
          <th>Title</th>
          <th>Author</th>
          <th>Category</th>
        </tr>
      </thead>
      <tbody>
        <% books.forEach((book) => { %>
          <tr>
            <td><%= book.id %></td>
            <td><%= book.title %></td>
            <td><%= book.author %></td>
            <td><%= book.category %></td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  </main>
</body>
</html>
